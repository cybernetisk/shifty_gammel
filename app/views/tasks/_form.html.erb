<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.select :user_id, User.all.map{ |x| [x.username, x.id] }, { :include_blank => true } %>
  </div>
  <div class="field">
    <%= f.label :user_group_id %><br />
    <%= f.select :user_group_id, UserGroup.all.map{ |x| [x.name, x.id] }, { :include_blank => true } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
