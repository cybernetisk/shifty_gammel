<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @shift_type.title %>
</p>
<p>
  <b>Description:</b>
  <%= @shift_type.description %>
</p>

<p>
  <b>Location:</b>
  <%= @shift_type.location %>
</p>

<table>
<tr>
    <td>Group name</td>
    <td>Can manage</td>
    <td>Can take shifts</td>
</tr>
