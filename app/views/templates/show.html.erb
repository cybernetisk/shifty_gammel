<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @template.title %>
</p>

<p>
  <b>Description:</b>
  <%= @template.description %>
</p>

<p>
  <b>Start:</b>
  <%= @template.start %>
</p>

<p>
  <b>Stop:</b>
  <%= @template.stop %>
</p>

