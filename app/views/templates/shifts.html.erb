      {
        cv.setTime(Date.parse(value[i]));
      }
      else if(value[i] != "")
        filter.push( value[i] + ".*");
    }


    $(".selected").removeClass("selected");
    
    if(filter.length > 0)
    {
        filter = new RegExp("(^" + filter.join("|^") + ")", "i");

        var e = function(){
          if(this.innerText.match(filter))
          {
            $(this).addClass("selected");
            }
        }
        $(".option").each(e);
    }
    $(".picker").each(function(){
      $(this).data("FilterList").updateFilter();
    });


