    {
      var c = data[i];
      var m = $("<a href=\"#\"></a>");
      m.html(c.title);
      m.css('display','block');
      d.append(m);
    }
    $(document.body).append(d);

  });

  d.mouseout(
    function(event){
      if(d[0] != event.toElement && d.has(event.toElement).length == 0)
